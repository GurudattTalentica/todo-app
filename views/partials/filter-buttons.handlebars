<div class="flex flex-col mt-10" id="filterBtns">
  <!-- Filter Buttons Container -->
  <div class="flex gap-2">
    {{#each filters}}
      <button
        {{!-- onclick="this.querySelector('.spinner').classList.remove('hidden')" --}}
        hx-get="/?filter={{this.filterName}}"
        hx-target="body"
        hx-push-url="true"
        hx-boost="true"                                  
        hx-swap="transition:true"  
        class="border-2 border-indigo-500 p-4 rounded-lg w-1/2 uppercase font-bold 
               transition-all hover:bg-indigo-400  hover:scale-105 text-center cursor-pointer 
               {{#ifEqual @root.selectedFilter this.filterName}} bg-indigo-500{{/ifEqual}}"
      >
        <span class="label">{{this.filterName}} ({{this.count}})</span>
        <img 
          src="assets/circular_loader.svg" 
          class="my-indicator h-5 w-auto mx-auto" 
          alt="Loading..."
        />
      </button>
    {{/each}}
  </div>

  <!-- Display the "no todos" partial if noTodos is false -->
  {{#unless noTodos}}
    {{>noTodo}}                                         
  {{/unless}}
</div>